{
  "name": "vite-module-federation",
  "private": true,
  "scripts": {
    "format": "prettier . --write",
    "dev": "concurrently \"npm run host:dev\" \"npm run remote:dev\"",
    "build": "concurrently \"npm run host:build\" \"npm run remote:build\"",
    "preview": "concurrently \"npm run host:preview\" \"npm run remote:preview\"",
    "host:dev": "cd host && npm run dev",
    "host:build": "cd host && npm run build",
    "host:preview": "cd host && npm run preview",
    "remote:dev": "cd remote && npm run dev",
    "remote:build": "cd remote && npm run build",
    "remote:preview": "cd remote && npm run preview"
  },
  "workspaces": [
    "host",
    "remote"
  ],
  "dependencies": {
    "concurrently": "^9.2.1",
    "prettier": "^3.8.1"
  }
}
